<%- include('../layouts/admin/header.ejs') %>

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">


            <div class="col-sm-12 col-xl-6 m-auto">
                <div class="bg-secondary rounded p-4">
                    <h6 class="mb-4">File Input</h6>



                    <form action="/admin/bannerManagement" method="post" enctype="multipart/form-data">
                        <div>
                            <label for="formFileLg" class="form-label">Banner image upload</label>
                            <input required class="form-control form-control-lg bg-dark mb-3" name="image"
                                id="formFileLg" multiple type="file" required accept="image/*">
                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Text-1</label>
                                    <div class="col-sm-10">
                                        <input type="text" pattern="[A-Za-z ]{1,32}" name="text1" class="form-control" id="inputEmail3" required>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Text-2</label>
                                    <div class="col-sm-10">
                                        <input type="text" pattern="[A-Za-z ]{1,32}"  name="text2"class="form-control" id="inputEmail3" required>
                                    </div>
                                </div>

                        </div>
                        <button type="submit" class="btn btn-primary">Upload</button>
                    </form>
                </div>
            </div>

            <!--  -->
            <div class="col-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">First on list will show on front</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">image</th>
                                    <th scope="col">header one</th>
                                    <th scope="col">header two</th>
                                    
                                    <th scope="col">action</th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                               <% for( let i = 0; i < data.length; i++ ) { %>
                                <tr>
                                    <th scope="row"><%= i %></th>
                                    <td><img src="/images/<%= data[i].image %>" alt="" width="300px"
                                        height="200px"></td>
                                    </td>
                                    <td><%= data[i].title1 %></td>
                                    <td><%= data[i].title2 %></td>
                                    <td> 
                                       <% if (data.length>1) { %>
                                        <a href="/admin/deleteBanner?id=<%= data[i]._id %>">
                                            <button type="button" class="btn btn-danger m-2">Delete</button>
                                        </a>
                                        
                                       <% } %>
                                    </td>
                                    
                                </tr>
                               
                               <% } %>
                                
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



        </div>
    </div>

    <% if (sweatAlert=="bannerSucces" ) { %>
        <script>
            Swal.fire({
                // position: 'top-end',
                icon: 'success',
                title: 'New Banner  Added',
                //showConfirmButton: false,
                //  timer: 2000
            })

        </script>

        <% } %>

            <%- include('../layouts/admin/footer.ejs') %>