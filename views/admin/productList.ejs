<%- include('../layouts/admin/header.ejs') %>
    <!-- Navbar End -->
    <!--  -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">


            <div class="col-12">
                <div class="bg-secondary rounded h-100 p-4">
                    <h6 class="mb-4">product Ledger</h6>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">No.</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Offer Price</th>
                                    <th scope="col">Purchase price</th>
                                    <th scope="col">Brand</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Access</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (product.length> 0) {
                                    for(let i=0;i<product.length;i++) { %>
                                        <tr class="align-self-center">
                                            <th scope="row">
                                                <%= [i+1]%>
                                            </th>
                                            <td>
                                                <%=product[i].name %>
                                            </td>
                                            <td>
                                                <%=product[i].category.name %>
                                            </td>

                                            <td>
                                                <%=product[i].pPrice %>
                                            </td>
                                            <td>
                                                <%=product[i].selling %>
                                            </td>
                                            <td>
                                                <%=product[i].brand%>
                                            </td>
                                            <td>
                                                <%=product[i].quantity%>
                                            </td>
                                            <td><img src="/images/<%= product[i].image[0] %>" alt="" width="100px"
                                                    height="100px"></td>
                                            <td>
                                                <% if(product[i].access) { %>
                                                    <a href="/admin/productDelete?id=<%=product[i]._id %>"><button type="button"
                                                            class="btn btn-success m-2">Not blocked</button></a>
                                                    <%} else{ %>

                                                        <a href="/admin/productDelete?id=<%=product[i]._id%>"><button
                                                                type="button"
                                                                class="btn btn-danger m-2">blocked</button></a>
                                            </td>
                                            <% }%>
                                                <td>
                                                    <a href="/admin/editProduct?id=<%=product[i]._id %>"> Edit</a>
                                                    
                                                </td>

                                        </tr>

                                        <% } } else { %>
                                            <tr scope="col">product not found</tr>
                                            <% } %>


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Table End -->
    <!--  -->


    <%- include('../layouts/admin/footer.ejs') %>