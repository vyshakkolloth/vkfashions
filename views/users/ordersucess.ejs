<%- include('../layouts/user/header.ejs') %>
<!-- 000 -->




<style>
  
  table, th, td {
    border: 1px solid black;
  }
  </style>
  <a href="/"><button class="button-primary"> go home</button></a>

<div class="container"  style="margin-bottom: 87px;">
    <div class="card mt-5 pt-1">
        <div class="card-body" style="box-shadow:  1px 1px 20px 7px #1b1b1c; ">
        <div class="container mb-5 mt-3">
          <div class="row d-flex align-items-baseline">
            <div class="col-xl-9">
              <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>Order ID: <%=data._id %></strong></p>
             
            </div>
            <hr>
            <div>
              <button class="btn btn-warning ml-left" id="printInvoice">Print</button>
            </div>
          </div>
          <br><br>
        
          <div class="container">
            <div class="col-md-12">
              <div class="text-center">
                <p class="pt-0"><h3><span style="color: #000000; font-weight: bold"> VK FASHION</span> </h3></p>
              </div>
        
            </div>
        
        
            <div class="row">
              <div class="col-xl-8 ">
                <ul class="list-unstyled" >
                  <li class="text-muted"><h4>To:</h4> <span style="color:#5d9fc5 ;"><h5><%=data.address.firtName %> </h5></span></li>
                  <li class="text-muted"><h5><%=data.address.address_line  %></h5></li>
                  <li class="text-muted"><h5><%=data.address.city  %></h5></li>
                  <li class="text-muted"><h5><%=data.address.state  %></h5></li>
                  <li class="text-muted"><h5><i class="fa fa-envelope "></i><%=data.address.zipCode  %> </h5></li>
                  <li class="text-muted"><h5><i class="fa fa-phone "></i> <%=data.address.MobileNo  %></h5></li>
                </ul>
              </div>
              <div class="col-xl-4">
                <p class="text-muted"><h4>Invoice</p></h4>
                <ul class="list-unstyled">
                  <li class="text-muted"><i class="fa fa-circle" style="color:#40464c ;"></i> <span
                    class="fw-bold">Payment Method: </span><%=data.paymentMethod %></li>
                  <li class="text-muted"><i class="fa fa-circle" style="color:#40464c  ;"></i> <span
                      class="fw-bold">Payment ID: </span></li>
                  <li class="text-muted"><i class="fa fa-circle" style="color:#40464c  ;"></i> <span
                      class="fw-bold">Creation Date: </span><%=data.order[0].date %></li>
                 
                  <li class="text-muted"><i class="fa fa-circle" style="color:#40464c  ;"></i> <span
                      class="me-1 fw-bold">Order Status: </span><%=data.order[0].status  %></li>
                </ul>
              </div>
            </div>
            <div class="row my-2 mx-1 justify-content-center">
              <table class="table table-striped table-borderless" style="margin-top:20px ;">
                <thead style="background-color: #ffffff;" class="text-white">
                  <tr style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; color: #000000;font-size: larger;" >
                    <th scope="col">Product</th>
                    <th scope="col">Unit Price</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Amount</th>
                  </tr>
                </thead>
                <tbody>
                    <% for( let i = 0; i < data.order.length; i++ ) { %>
                    
                 
                  <tr style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-size: larger;">
                    <td><%=data.order[i].product.name%></td>
                    <td>₹ <%=data.order[i].price  %></td>
                    <td><%=data.order[i].quantity %></td>
                    <td>₹ <%=data.order[i].totalprice  %></td>
                  </tr>
                  <% } %>
                </tbody>
        
              </table>
            </div>
            <div class="row">
        
              <div class="col-lg-4 ml-4">
                <h4><ul class="list-unstyled ">
                  <!-- <li class=" ms-3" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span class="text-black me-4">SubTotal: </span>₹  </li> -->
                    <li class=" ms-3" style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"><span class="text-black me-4"> Grand Total: </span><span>₹<%=data.grandTotal%></span></li>
                  </ul></h4>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-xl-12 justify-content-center d-flex">
                <p><span style="color: #ff3368; font-weight: bold">Thank you for purchasing from us.</span></p>
              </div>
        
            </div>
        
          </div>
        </div>
        </div>
        </div>
      </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        
<script>
    document.getElementById("printInvoice").addEventListener("click", function() {
        window.print();
    });

</script>



<!-- 0000 -->
</body>
</html>