<% if (user.address==[]) { %>
    <div class="col-12 px-xl-5">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">ADDRESS LIST</h6>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Country</th>
                            <th scope="col">ZIP</th>
                            <th scope="col">city</th>
                            <th scope="col">State</th>
                            <th scope="col">Address</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Edit</th>
                            <% if (cart=="true") { %>
                            <th scope="col">Select</th>
                            <% } %>
    
    
                            
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let i = 0; i < user.address.length; i++ ) { %>
                        
                        
                        <tr>
                            <th scope="row"><%= i+1 %></th>
                            <td scope="row"><%= user.address[i].firtName %></td>
                            <td scope="row"><%= user.address[i].lastName %></td>
                            <td scope="row"><%= user.address[i].E_mail%></td>
                            <td scope="row"><%= user.address[i].country%></td>
                            <td scope="row"><%= user.address[i].zipCode %></td>
                            <td scope="row"><%= user.address[i].city %></td>
                            <td scope="row"><%= user.address[i].state %></td>
                            <td scope="row"><%= user.address[i].Address_Line %></td>
                            <td class="align-middle"><a href="/removeAddress?id=<%=user.address[i]._id %>"><button class="btn btn-sm btn-primary"><i class="fa fa-times"></i></button></a></td>
                            <td scope="row"> <a href="/editAddress?val=<%=user.address[i]._id %>"><button class="btn  btn-primary">Edit </button> </a></td>
                            <% if (cart=="true") { %>
                             
                          
                            <td scope="row"> <a href="/checkout?index=<%= i %>"><button class="btn  btn-primary">Select </button></a></td>
                            <% } %>
    
                            
                            
                            
                            
    
                            
                        </tr>
                        <% } %>
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
 
<% } else { %>
    <div class="col-12 px-xl-5">
        <div class="bg-secondary rounded h-100 p-4 d-flex align-items-center justify-content-center">
            <div class="d-block">
              <a href="/addAddress">   <h1 class="ml-5"> ADD ADDRESS</h1></a>
            <img class="" " style="max-height: 25rem; width: 25rem;" src="img/noaddress.jpg" alt="">
            </div>
            </div>
            </div>

    <% } %>
 
