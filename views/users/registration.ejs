<%- include("../layouts/header.ejs")%>
  <!-- ======================= -->
  <section class="vh-100 bg-image"
    style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">Create an account</h2>
                <!--form action-->
                <form action="/register" method="post" class="container">

                  <div class="form-outline mb-4">
                    <input type="text" id="form3Example1cg" required name="name" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example1cg">Your Name</label>
                  </div>
                  <p style="color: red">
                    <%= re_fnameError %> </p>
                  

                  <div class="form-outline mb-4">
                    <input type="email" id="form3Example3cg" required name="email" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example3cg">Your Email</label>
                  </div>
                  <p style="color: red">
                  <%= re_emailError %> </p>

                  <div class="form-outline mb-4">
                    <input type="password" id="form3Example4cg" required name="password" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example4cg">Password</label>
                  </div>
                  <p  style="color: red">
                  <%= re_passwordError %></p>

                  <!-- <div class="form-outline mb-4">
                    <input type="password" id="form3Example4cg" required name="password" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example4cg"> Repeat Password</label>
                  </div>
                  <p  style="color: red">
                 </p> -->

                  <div class="form-outline mb-4">
                    <input type="number" id="form3Example4cdg"required class="form-control form-control-lg" name="mobile"/>
                    <label class="form-label" for="form3Example4cdg">Mobile Number</label>
                  </div>
                  <p style="color: red">
                  <%= re_mobileError %> </p>

                  <!-- <div class="form-check d-flex justify-content-center mb-5">
                  <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                  <label class="form-check-label" for="form2Example3g">
                    I agree all statements in <a href="#!" class="text-body"><u>Terms of service</u></a>
                  </label>
                </div> -->

                  <% if (typeof message !=='undefined' ) { %>
                    <p style="color: green">
                      <%= message %>
                    </p>
                    <% } %>
                     

                        <div class="d-flex justify-content-center">
                          <button  type="submit" value="register" required
                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                        </div>

                        <p class="text-center text-muted mt-5 mb-0">Have already an account? <a href="/login"
                            class="fw-bold text-body"><u>Login here</u></a></p>

                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include("../layouts/footer.ejs")%>