                    <!--  -->
                    <!--  -->
                    <div class="card mb-3 mt-3">
                        <div class="card-body">
                            <!--  -->
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Old Password</h6>
                                </div>
                                <div class="col-sm-9 text-primary">
                                    <input type="password" id="currentPass" class="fd" required name="">
                                </div>

                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">New Password</h6>
                                </div>
                                <div class="col-sm-9 text-primary ">
                                    <input type="password" id="newPassword" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                                    title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                                     class="fd" required name="">
                                </div>

                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Repeat Password</h6>
                                </div>
                                <div class="col-sm-9 text-primary">
                                    <input type="password" id="confrimPassword" class="fd" required name="">
                                </div>

                            </div>
                            <p id="msg" class="text-danger text-center "></p>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Action</h6>
                                </div>
                                <div class="col-sm-9 text-primary">
                                    <button type="submit" onclick="validatePass()" class="btn btn-primary">
                                        update</button>
                                </div>
                            </div>
                            <!--  -->
                        </div>
                    </div>
                    <!--  -->

                    <!--  -->
                </div>


            </div>
        </div>

    </div>
