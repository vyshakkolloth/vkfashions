 <%- include("../layouts/header.ejs")%>
  
  <section class="vh-100 bg-image"
    style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img12.webp');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
      <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card bg-dark text-white " style="border-radius: 15px;">
              <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">Edit user</h2>
                
                
                 <%- include('../layouts/user/header.ejs') %>
                <form action="/admin/edituser" method="post" class="container">

                  <div class="form-outline mb-4">
                    <input type="text" id="form3Example1cg" required name="name" value="<%=user.name %>" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example1cg">Your Name</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="email" id="form3Example3cg" required name="email" value="<%=user.email %>" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example3cg">Your Email</label>
                  </div>

                  <!-- <div class="form-outline mb-4">
                    <input type="password" id="form3Example4cg" required name="password" class="form-control form-control-lg" />
                    <label class="form-label" for="form3Example4cg">Password</label>
                  </div> -->

                  <div class="form-outline mb-4">
                    <input type="number" id="form3Example4cdg"required class="form-control form-control-lg" value="<%=user.mobile %>" name="mobile"/>
                    <label class="form-label" for="form3Example4cdg">Mobile Number</label>
                  </div>
                  <input type="hidden" name="id" value="<%=user._id %>">

                
                  <% if (typeof message !=='undefined' ) { %>
                    <p style="color: green">
                      <%= message %>
                    </p>
                    <% } %>
                      <%- include("../layouts/footer.ejs") %>

                        <div class="d-flex justify-content-center">
                          <button  type="submit" value="register" required
                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                        </div>

                        <p class="text-center text-muted mt-5 mb-0">GO BACK <a href="/admin/home"
                            class="fw-bold text-body"><u>Home</u></a></p>

                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <%- include("../layouts/footer.ejs")%>